block language
  -
    var language = "en"

include ./layout/icons.pug
include ./layout/components.pug

include ./data/strings.pug
include ./data/projects.pug
include ./data/publications.pug

doctype html
html(lang=language)
  include ./layout/head.pug
  body
    include ./layout/navvar.pug

    // Content
    div(class="container push-right")
      div(class="col-sm-12 -cards")
        // Profile
        div.row
          div.page-header
            h1#profile.text-left #{strings.profile[language]}
          div.col-sm-5
            block bio
          div.col-sm-7
            div(class="panel panel-default")
              div(class="panel-heading clearfix")
                h3(class="panel-title pull-left") #{strings.interest[language]}
              div.panel-body
                block interest

        // Content
        div.row
          div.page-header
            h1#projects.text-left #{strings.projects[language]}
          div.col-sm-12
            div.row
              div.col-sm-12
              each project in projects
                +projectLarge(project.title, project.image, project.tags, project.links)
            div.row
              h2.text-left #{strings.activities[language]}
              div.col-sm-12
                each activity in activities
                  +projectSmall(activity.title[language], activity.image, activity.tags, activity.links)
            div.row
              h2.text-left #{strings.others[language]}
              div.col-sm-12
                each repository in repositories
                  +projectSmall(repository.title, repository.image, repository.tags, repository.links)
        div.row
          div.page-header
            h1#publications.text-left #{strings.publications[language]}
          div.col-sm-12
            div(class="panel panel-default")
              div.list-group
                each publication, index in publications
                  +publication(index,
                               publication.title, publication.location, publication.resources)

    // Modal
    each publication, index in publications
      +publicationModal(index,
                        publication.title, publication.location, publication.resources)

    // Footer
    div(class="navbar navbar-default navbar-fixed-bottom" role="navigation")
      div.container
        div.btn-group(style="display: ''")
          a(class="btn btn-default", href="#profile")
            +profileIcon("2x")
            span #{strings.profile[language]}
          a(class="btn btn-default", href="#projects")
            +projectIcon("2x")
            span #{strings.projects[language]}
          a(class="btn btn-default", href="#publications")
            +publicationIcon("2x")
            span #{strings.publications[language]}
          a(class="btn btn-default", href="https://github.com/HiroakiMikami")
            +githubIcon("2x")
            span Github
